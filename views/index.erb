<html>
    <head>
        <script language="javascript" src="/js/lib/angular.js" type="text/javascript"></script>
        <script language="javascript" src="/js/lib/angular-route.js" type="text/javascript"></script>
        <script language="javascript" src="/js/mainApp.js" type="text/javascript"></script>
        <script language="javascript" src="/js/controllers.js" type="text/javascript"></script>
        <script language="javascript" src="/js/filters.js" type="text/javascript"></script>
        <script language="javascript" src="/js/directives.js" type="text/javascript"></script>
    </head>
	<body ng-app="mainApp">
        <div id="main" ng-controller="mainCtrl">
          <p>
            <div>
              <label>Id:</label>  <input type="text" ng-model="player.id"/>
            </div>
            
            <div>
              <label>Name:</label>  <input type="text" ng-model="player.name"/>
            </div>

            <div>Full Name: {{player.id+ ": " + player.name}}</div>
            <div>Reversed: {{player.id+ ": " + player.name | reverse}}</div>

            <adddiv></adddiv>
            
            <mytransclude>
                <button>Click Me</button> 
            </mytransclude>

            <div rollover="message">ROLLOVER ME</div>

            <button ng-click="reset()">Reset Bitch!</button>
          </p>
        </div>
        
        <hr/>

        <ng-view></ng-view>
    </body>
</html>
